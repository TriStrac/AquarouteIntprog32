<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#c6e7ff" /> <!-- Gray background -->
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed -->
            <stroke
                android:width="1dp"
                android:color="#c6e7ff" /> <!-- Blue outline -->
        </shape>
    </item>

    <!-- Inner background -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#f6fafe" /> <!-- Gray background -->
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

</layer-list>